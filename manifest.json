{
	"name": "Discord Browser-Wide PTT",
	"version": "1.0",
	"description": "Push-to-talk from any tab to the Discord web client.",
	"manifest_version": 2,

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [{
		"matches": ["https://discord.com/*"],
		"run_at": "document_start",
		"js": ["content.js"]
	}],

	"web_accessible_resources": ["injected.js"],

	"commands": {
		"ptt": {
			"suggested_key": {
				"default": "Ctrl+D"
			},
			"description": "Enable PTT for the Discord web client"
		}
	}
}
